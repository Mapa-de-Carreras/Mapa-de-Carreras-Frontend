{
  "compilerOptions": {
    "target": "ES2024",
    "lib": ["DOM", "DOM.Iterable", "ES2024"],
    "module": "ESnext",
    "moduleResolution": "bundler",

    "jsx":"react-jsx",

    "types":["react","react-dom","vite/client"],

    "noEmit":true,
    "isolatedModules":true,
    "strict":true,
    "skipLibCheck":true,

    "baseUrl":".",
    "paths": {
      "@/*":["./src/*"]
    }
  },
  "include": ["src", "vite.config.ts"],
  "exclude": ["node_modules", "dist"],
}
