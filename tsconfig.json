{
  "compilerOptions": {
    "target": "ES2024",
    "lib": ["DOM", "DOM.Iterable", "ES2024"],
    "module": "ESnext",
    "moduleResolution": "bundler",

    "jsx":"react-jsx",

    "types":["react","react-dom","vite/client"],

    "noEmit":true,
    "isolatedModules":true,
    "strict":true,
    "skipLibCheck":true,
    "allowJs": false,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,

    "baseUrl":".",
    "paths": {
      // Shared
      "@components/*":["./src/shared/components/*"],
      "@apis/*":["./src/shared/apis/*"],
      "@lib/*":["./src/shared/lib/*"],
      
      // Modules
      "@academic/*":["./src/modules/academic/*"],
      "@designations/*":["./src/modules/designations/*"],
      "@management/*":["./src/modules/management/*"],
      "@statistics/*":["./src/modules/statistics/*"],
      "@teachers/*":["./src/modules/teachers/*"],
      "@users/*":["./src/modules/users/*"],
    }
  },
  "include": ["src", "vite.config.ts"],
  "exclude": ["node_modules", "dist"],
}
